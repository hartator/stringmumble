<%# coding: UTF-8 %>
<%- model_class = Mumble -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:string_a) %>:</strong></dt>
  <dd><%= @mumble.string_a %></dd>
  <dt><strong><%= model_class.human_attribute_name(:string_b) %>:</strong></dt>
  <dd><%= @mumble.string_b %></dd>
</dl>

<h2><%= @mumble.string_a %></h2>

<table class="table table-condensed">  
  <thead>  
    <tr>  
      <th>Method Used</th>  
      <th>Result</th>  
    </tr>  
  </thead>  
  <tbody>
	<% @array_a.each do |e| %>  
    <tr class="<%= check_similiraty e[1], @mumble.string_b %>" >  
      <td><%= e[0] %></td>
  	 <td> <% begin %>
  	  	<%= e[1] %>
  	  <% rescue Exception => x %>
  	  	<%= x %>		
  	  <% end %> </td>
    </tr>
  	<% end %>
  </tbody>  
</table>

<h2><%= @mumble.string_b %></h2>

<table class="table table-condensed">  
  <thead>  
    <tr>  
      <th>Method Used</th>  
      <th>Result</th>  
    </tr>  
  </thead>  
  <tbody>
	<% @array_b.each do |e| %>  
    <tr class="<%= check_similiraty e[1], @mumble.string_a %>" >  
      <td><%= e[0] %></td>
  	 <td> <% begin %>
  	  	<%= e[1] %>
  	  <% rescue Exception => x %>
  	  	<%= x %>		
  	  <% end %> </td>
    </tr>
  	<% end %>
  </tbody>  
</table>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mumbles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mumble_path(@mumble), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mumble_path(@mumble),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
